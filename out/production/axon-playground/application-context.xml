<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core-2.0.xsd">

    <axon:command-bus id="commandBus"/>
    <axon:event-bus id="eventBus"/>
    <axon:annotation-config command-bus="commandBus"
                            event-bus="eventBus"/>

    <axon:event-sourcing-repository id="invoiceRepository"
                                    aggregate-type="playground.Invoice"
                                    event-bus="eventBus"/>

    <axon:aggregate-command-handler id="invoiceHandler"
                                    aggregate-type="playground.Invoice"
                                    repository="invoiceRepository"
                                    command-bus="commandBus"/>

    <axon:filesystem-event-store id="eventStore" base-dir="events"/>

    <bean id="invoiceStore" class="playground.Repository"/>

    <bean id="commandGateway" class="org.axonframework.commandhandling.gateway.CommandGatewayFactoryBean">
        <property name="commandBus" ref="commandBus"/>
    </bean>

    <bean class="playground.command.InvoiceCommandDispatcher">
        <constructor-arg ref="commandGateway"/>
        <constructor-arg ref="eventBus"/>
        <constructor-arg ref="invoiceRepository"/>
    </bean>

    <bean id="invoiceQueue" class="java.util.concurrent.ArrayBlockingQueue">
        <constructor-arg value="1000"/>
    </bean>

    <bean class="playground.event.EventQueueRegistry">
        <constructor-arg ref="invoiceQueue"/>
    </bean>

    <bean class="playground.command.InvoiceCommandHandler">
        <constructor-arg ref="eventBus"/>
    </bean>

    <bean class="playground.event.InvoiceEventHandler"></bean>

</beans>
